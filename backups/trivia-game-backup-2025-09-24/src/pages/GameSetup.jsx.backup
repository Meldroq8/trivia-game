import { useState, useEffect, useRef } from 'react'
import { useNavigate } from 'react-router-dom'

function GameSetup({ gameState, setGameState }) {
  const [gameName, setGameName] = useState(gameState.gameName)
  const [team1Name, setTeam1Name] = useState(gameState.team1.name)
  const [team2Name, setTeam2Name] = useState(gameState.team2.name)
  const [dimensions, setDimensions] = useState({ width: window.innerWidth, height: window.innerHeight })
  const headerRef = useRef(null)
  const [headerHeight, setHeaderHeight] = useState(0)
  const navigate = useNavigate()

  useEffect(() => {
    const updateDimensions = () => {
      setDimensions({ width: window.innerWidth, height: window.innerHeight })

      if (headerRef.current) {
        const headerRect = headerRef.current.getBoundingClientRect()
        setHeaderHeight(headerRect.height)
      }
    }

    updateDimensions()
    window.addEventListener('resize', updateDimensions)
    return () => window.removeEventListener('resize', updateDimensions)
  }, [])

  // Perfect scaling system to fit entire content below header
  const getResponsiveStyles = () => {
    const { width, height } = dimensions
    const isPortrait = height > width
    const actualHeaderHeight = headerHeight || (isPortrait ? 60 : 80)

    // Calculate available space below header
    const availableHeight = height - actualHeaderHeight
    const availableWidth = width

    // Content padding and margins
    const basePadding = Math.max(8, Math.min(20, availableHeight * 0.02))
    const baseGap = Math.max(12, Math.min(24, availableHeight * 0.03))

    // Calculate space for each section
    const contentPadding = basePadding * 2 // top and bottom of main container
    const titleSectionHeight = availableHeight * (isPortrait ? 0.15 : 0.2)
    const buttonSectionHeight = availableHeight * (isPortrait ? 0.15 : 0.2)
    const formsHeight = availableHeight - contentPadding - titleSectionHeight - buttonSectionHeight - (baseGap * 3)

    // Font sizes based on available space
    const headerFontSize = Math.max(10, Math.min(24, width * (isPortrait ? 0.035 : 0.02)))
    const titleFontSize = Math.max(14, Math.min(28, titleSectionHeight * 0.3))
    const subtitleFontSize = Math.max(10, Math.min(20, titleSectionHeight * 0.2))

    // Form section sizing - Better proportions
    const gameNameSectionHeight = formsHeight * (isPortrait ? 0.25 : 0.35) // Game name gets less space
    const teamsSectionHeight = formsHeight * (isPortrait ? 0.75 : 0.65) // Teams get more space

    const labelFontSize = Math.max(12, Math.min(22, gameNameSectionHeight * 0.2))
    const inputFontSize = Math.max(11, Math.min(20, gameNameSectionHeight * 0.18))
    const inputPadding = Math.max(8, Math.min(18, gameNameSectionHeight * 0.12))
    const sectionPadding = Math.max(10, Math.min(22, gameNameSectionHeight * 0.18))

    // Button sizing
    const buttonFontSize = Math.max(12, Math.min(20, buttonSectionHeight * 0.3))
    const buttonPadding = Math.max(8, Math.min(20, buttonSectionHeight * 0.15))

    return {
      headerFontSize,
      titleFontSize,
      subtitleFontSize,
      labelFontSize,
      inputFontSize,
      buttonFontSize,
      basePadding,
      baseGap,
      inputPadding,
      sectionPadding,
      buttonPadding,
      availableHeight,
      availableWidth,
      titleSectionHeight,
      buttonSectionHeight,
      gameNameSectionHeight,
      teamsSectionHeight,
      isPortrait
    }
  }

  const styles = getResponsiveStyles()

  const handleStartGame = () => {
    setGameState(prev => ({
      ...prev,
      gameName: gameName,
      team1: { ...prev.team1, name: team1Name },
      team2: { ...prev.team2, name: team2Name }
    }))
    navigate('/categories')
  }

  return (
    <div className="h-screen bg-white flex flex-col">
      {/* Red Header Bar - Fixed Height */}
      <div ref={headerRef} className="bg-red-600 text-white flex-shrink-0" style={{ padding: `${styles.basePadding}px` }}>
        <div className="flex justify-between items-center">
          <div className="flex items-center" style={{ gap: `${styles.baseGap}px` }}>
            <span className="font-bold text-white" style={{ fontSize: `${styles.headerFontSize}px` }}>
              🧠 لعبة الأسئلة والأجوبة
            </span>
          </div>

          <div className="flex items-center">
            <h1 className="font-bold text-center" style={{ fontSize: `${styles.headerFontSize}px` }}>
              إعداد اللعبة
            </h1>
          </div>

          <div className="flex" style={{ gap: `${styles.baseGap}px` }}>
            <button
              onClick={() => navigate('/admin')}
              className="bg-red-700 hover:bg-red-800 text-white rounded-lg transition-colors font-bold"
              style={{
                fontSize: `${styles.headerFontSize * 0.8}px`,
                padding: `${styles.basePadding * 0.5}px ${styles.basePadding}px`
              }}
            >
              إعدادات المدير
            </button>
          </div>
        </div>
      </div>

      {/* Main Content - Perfectly Scaled to Fill Remaining Space */}
      <div
        className="flex-1 bg-white flex flex-col justify-center"
        style={{
          height: `${styles.availableHeight}px`,
          padding: `${styles.basePadding}px`,
          overflow: 'hidden'
        }}
      >
        <div className="bg-white rounded-2xl shadow-lg w-full max-w-4xl mx-auto flex flex-col justify-between" style={{
          height: '100%',
          padding: `${styles.basePadding}px`
        }}>
          {/* Title Section */}
          <div className="text-center flex flex-col justify-center" style={{
            height: `${styles.titleSectionHeight}px`,
            marginBottom: `${styles.baseGap}px`
          }}>
            <h2 className="font-bold text-gray-800" style={{
              fontSize: `${styles.titleFontSize}px`,
              marginBottom: `${styles.baseGap * 0.5}px`
            }}>
              إعداد فرق اللعبة
            </h2>
            <p className="text-gray-600" style={{ fontSize: `${styles.subtitleFontSize}px` }}>
              أدخل أسماء الفرق لبدء اللعبة
            </p>
          </div>

          {/* Forms Section - Flex Growing Area */}
          <div className="flex-1 flex flex-col justify-center" style={{ marginBottom: `${styles.baseGap}px` }}>
            {/* Game Name Section - Smaller */}
            <div style={{ height: `${styles.gameNameSectionHeight}px`, marginBottom: `${styles.baseGap}px` }}>
              <div className="bg-gray-50 rounded-lg border-2 border-gray-200 h-full flex flex-col justify-center" style={{ padding: `${styles.sectionPadding}px` }}>
                <h3 className="font-bold text-gray-800 text-center" style={{
                  fontSize: `${styles.labelFontSize}px`,
                  marginBottom: `${styles.baseGap * 0.4}px`
                }}>
                  اسم اللعبة
                </h3>
                <input
                  type="text"
                  value={gameName}
                  onChange={(e) => setGameName(e.target.value)}
                  className="w-full border-2 border-gray-300 rounded-lg text-center font-bold focus:border-red-500 focus:outline-none"
                  style={{
                    padding: `${styles.inputPadding}px`,
                    fontSize: `${styles.inputFontSize}px`,
                    height: `${Math.max(35, styles.gameNameSectionHeight * 0.4)}px`
                  }}
                  placeholder="أدخل اسم اللعبة"
                  maxLength={30}
                />
              </div>
            </div>

            {/* Teams Section - Larger */}
            <div className={`${styles.isPortrait ? 'flex flex-col' : 'grid grid-cols-2'}`} style={{
              gap: `${styles.baseGap}px`,
              height: `${styles.teamsSectionHeight}px`
            }}>
              {/* Team 1 */}
              <div className="bg-gray-50 rounded-lg border-2 border-gray-200 flex flex-col justify-center" style={{
                padding: `${styles.sectionPadding}px`,
                height: styles.isPortrait ? `${(styles.teamsSectionHeight - styles.baseGap) / 2}px` : '100%'
              }}>
                <h3 className="font-bold text-gray-800 text-center" style={{
                  fontSize: `${styles.labelFontSize}px`,
                  marginBottom: `${styles.baseGap * 0.4}px`
                }}>
                  الفريق الأول
                </h3>
                <input
                  type="text"
                  value={team1Name}
                  onChange={(e) => setTeam1Name(e.target.value)}
                  className="w-full border-2 border-gray-300 rounded-lg text-center font-bold focus:border-red-500 focus:outline-none"
                  style={{
                    padding: `${styles.inputPadding}px`,
                    fontSize: `${styles.inputFontSize}px`,
                    height: `${Math.max(35, styles.gameNameSectionHeight * 0.4)}px`
                  }}
                  placeholder="اسم الفريق الأول"
                  maxLength={20}
                />
              </div>

              {/* Team 2 */}
              <div className="bg-gray-50 rounded-lg border-2 border-gray-200 flex flex-col justify-center" style={{
                padding: `${styles.sectionPadding}px`,
                height: styles.isPortrait ? `${(styles.teamsSectionHeight - styles.baseGap) / 2}px` : '100%'
              }}>
                <h3 className="font-bold text-gray-800 text-center" style={{
                  fontSize: `${styles.labelFontSize}px`,
                  marginBottom: `${styles.baseGap * 0.4}px`
                }}>
                  الفريق الثاني
                </h3>
                <input
                  type="text"
                  value={team2Name}
                  onChange={(e) => setTeam2Name(e.target.value)}
                  className="w-full border-2 border-gray-300 rounded-lg text-center font-bold focus:border-red-500 focus:outline-none"
                  style={{
                    padding: `${styles.inputPadding}px`,
                    fontSize: `${styles.inputFontSize}px`,
                    height: `${Math.max(35, styles.gameNameSectionHeight * 0.4)}px`
                  }}
                  placeholder="اسم الفريق الثاني"
                  maxLength={20}
                />
              </div>
            </div>
          </div>

          {/* Button Section - Fixed Height */}
          <div className="text-center flex flex-col justify-center" style={{ height: `${styles.buttonSectionHeight}px` }}>
            <button
              onClick={handleStartGame}
              disabled={!gameName.trim() || !team1Name.trim() || !team2Name.trim()}
              className="bg-red-600 hover:bg-red-700 disabled:bg-gray-400 text-white font-bold rounded-lg shadow-lg transition-all duration-200 hover:shadow-xl disabled:cursor-not-allowed"
              style={{
                fontSize: `${styles.buttonFontSize}px`,
                padding: `${styles.buttonPadding}px ${styles.buttonPadding * 2}px`
              }}
            >
              ابدأ اللعبة 🎮
            </button>
          </div>
        </div>
      </div>
    </div>
  )
}

export default GameSetup