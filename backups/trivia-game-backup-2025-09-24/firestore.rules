rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow all users to read game data (for future features)
    match /games/{gameId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Questions collection - allow authenticated users to read and write
    match /questions/{questionId} {
      // Allow read access for all authenticated users
      allow read: if request.auth != null;

      // Allow write access for authenticated users
      // You can restrict this further by checking for admin status if needed
      allow write: if request.auth != null;
    }

    // Categories collection - allow authenticated users to read and write
    match /categories/{categoryId} {
      // Allow read access for all authenticated users
      allow read: if request.auth != null;

      // Allow write access for authenticated users
      // You can restrict this further by checking for admin status if needed
      allow write: if request.auth != null;
    }

    // Question usage tracking - users can only access their own usage data
    match /questionUsage/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Default deny all other documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}